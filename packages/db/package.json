{
  "name": "@zenith-hr/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./env": {
      "default": "./src/env.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "clean": "rimraf --glob \"dist\" \"out\" \"build\" \"coverage\" \".cache\" \".eslintcache\" \"node_modules\" \"**/*.tsbuildinfo\"",
    "db:push": "bun --env-file=../../.env drizzle-kit push",
    "db:studio": "bun --env-file=../../.env drizzle-kit studio",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env drizzle-kit migrate",
    "db:seed": "bun --env-file=../../.env src/seed.ts",
    "db:backfill:separations": "bun --env-file=../../.env src/backfill-separations.ts"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/ws": "catalog:",
    "@zenith-hr/config": "workspace:*",
    "drizzle-kit": "catalog:",
    "rimraf": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@t3-oss/env-core": "catalog:",
    "better-auth": "catalog:",
    "drizzle-orm": "catalog:",
    "pg": "^8.18.0",
    "ws": "^8.19.0",
    "zod": "catalog:"
  }
}
