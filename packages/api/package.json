{
  "name": "@zenith-hr/api",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./server": {
      "default": "./src/server.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "check-types": "tsc --noEmit",
    "test": "bun --env-file=../../.env test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "clean": "rimraf --glob \"dist\" \"out\" \"build\" \"coverage\" \".cache\" \".eslintcache\" \"node_modules\" \"**/*.tsbuildinfo\""
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@zenith-hr/config": "workspace:*",
    "fast-check": "^4.5.3",
    "pino-pretty": "catalog:",
    "pino-std-serializers": "catalog:",
    "react": "^19.2.4",
    "rimraf": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@ai-sdk/google": "catalog:",
    "@aws-sdk/client-s3": "^3.1000.0",
    "@aws-sdk/s3-request-presigner": "^3.1000.0",
    "@orpc/client": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@react-pdf/renderer": "^4.3.2",
    "@t3-oss/env-core": "catalog:",
    "@upstash/redis": "^1.36.3",
    "@zenith-hr/auth": "workspace:*",
    "@zenith-hr/db": "workspace:*",
    "ai": "catalog:",
    "drizzle-orm": "catalog:",
    "elysia": "catalog:",
    "pdf-lib": "^1.17.1",
    "pino": "catalog:",
    "xstate": "^5.28.0",
    "zod": "catalog:"
  }
}
