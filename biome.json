{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source"
    ]
  },
  "extends": ["ultracite/core", "ultracite/next"],
  "linter": {
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off",
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noUnknownFunction": "off"
      },
      "nursery": {
        "noShadow": "off",
        "noLeakedRender": "off",
        "useMaxParams": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  }
}
