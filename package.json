{
  "name": "zenith-hr",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "^1.4.16",
      "@orpc/server": "^1.11.3",
      "@orpc/openapi": "^1.11.3",
      "@orpc/zod": "^1.11.3",
      "better-auth": "^1.4.0",
      "ai": "^5.0.99",
      "@ai-sdk/google": "^2.0.40",
      "dotenv": "^17.2.3",
      "zod": "^4.1.12",
      "typescript": "^5.9.3",
      "@orpc/client": "^1.11.3",
      "drizzle-orm": "^0.44.7"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @zenith-hr/db db:push",
    "db:studio": "turbo -F @zenith-hr/db db:studio",
    "db:generate": "turbo -F @zenith-hr/db db:generate",
    "db:migrate": "turbo -F @zenith-hr/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/bun": "^1.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.1",
    "ultracite": "6.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
