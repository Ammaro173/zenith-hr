{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --env-file=../../.env --hot src/index.ts",
    "start": "bun run --env-file=../../.env dist/index.mjs",
    "clean": "rimraf --glob \"dist\" \"build\" \"out\" \".next\" \".vercel\" \"node_modules\" \"**/*.tsbuildinfo\""
  },
  "dependencies": {
    "@ai-sdk/google": "catalog:",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/opentelemetry": "^1.4.9",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/sdk-node": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@t3-oss/env-core": "catalog:",
    "@zenith-hr/api": "workspace:*",
    "@zenith-hr/auth": "workspace:*",
    "@zenith-hr/db": "workspace:*",
    "drizzle-orm": "catalog:",
    "ai": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "elysia": "catalog:",
    "pino-pretty": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@zenith-hr/config": "workspace:*",
    "rimraf": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
