# ============================================================
# Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# Variables marked (required) must be set
# Variables marked (optional) have defaults or are not required
# ============================================================

# ------------------------------------------------------------
# Database (required)
# ------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/zenith_hr

# ------------------------------------------------------------
# Server Configuration (optional - has defaults)
# ------------------------------------------------------------
# Backend server port (default: 3000)
PORT=3000

# Web app port (default: 3001)
WEB_PORT=3001

# Environment mode (default: development)
# Options: development, production, test
NODE_ENV=development

# Logging level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info

# CORS origin for frontend (default: http://localhost:3001)
CORS_ORIGIN=http://localhost:3001

# ------------------------------------------------------------
# Authentication (optional but recommended for production)
# ------------------------------------------------------------
# Secret key for Better Auth (min 32 characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-at-least-32-characters-long

# Base URL for authentication (points to the server port)
BETTER_AUTH_URL=http://localhost:3000

# ------------------------------------------------------------
# AWS / S3 Storage (optional - for file uploads)
# ------------------------------------------------------------
# AWS region for S3 bucket
AWS_REGION=us-east-1

# AWS credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 bucket name for file storage
S3_BUCKET_NAME=zenith-hr-uploads

# ------------------------------------------------------------
# AI / LLM Integration (optional)
# ------------------------------------------------------------
# Google Generative AI API key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# ------------------------------------------------------------
# Redis Cache (optional - for caching)
# ------------------------------------------------------------
# Upstash Redis REST API URL
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io

# Upstash Redis REST API token
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# ------------------------------------------------------------
# Web App - Client-Side Variables (NEXT_PUBLIC_*)
# These are exposed to the browser
# ------------------------------------------------------------
# Backend API server URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Web app public URL for callbacks/redirects
NEXT_PUBLIC_WEB_URL=http://localhost:3001

# VAPID public key for push notifications (optional)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ------------------------------------------------------------
# Web App - Server-Side Variables
# ------------------------------------------------------------
# Internal server URL (used in server components)
SERVER_URL=http://localhost:3000

# VAPID private key for push notifications (optional)
VAPID_PRIVATE_KEY=

# ------------------------------------------------------------
# Build Configuration (internal use)
# ------------------------------------------------------------
# Skip environment validation during build
# SKIP_ENV_VALIDATION=true
